<%- include('../../partials/sidebar')%>
<link rel="stylesheet" href="/css/button8.css" />

<style>
    .row{
    max-width: 98%;
    margin-left: 1%;
}
</style>

<form action="/logistic/productexit/<%=products._id%>" method="POST">
    <div class="row mt-2">
        <div class="col-lg-10">
        </div>
        <div class="col-sm-2">
          <button type="button" class="button-8 mb-2" id="result" style="float: right;">
            <span class="counter-value"><%=inStorage.quantity%></span>
            total units
          </button>
        </div>
      </div>
    <div class="row mt-2 mb-2">
        <div class="col">
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="number" placeholder="Number:" name="receiptNumber">
                <label for="number">Receipt Number:</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input type="date" class="form-control" id="date" placeholder="Date:" name="receiptDate">
                <label for="date">Receipt Date:</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="quantity" placeholder="Quantity:" name="receiptQuantity">
                <label for="quantity">Quantity:</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="price" placeholder="Price:" name="receiptPrice" pattern="[0-9]+([\.,][0-9]+)?" step="0.01">
                <label for="price">Price:</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <select class="form-select" id="warehouse" aria-label="Floating label select warehouse" name="receiptWarehouse">
                    <%warehouses.forEach((warehouse)=>{%>
                        <option value="<%=warehouse.code%>"><%=warehouse.name%> (<%=warehouse.branch%>)</option>
                    <%})%>
                </select>
                <label for="warehouse">Warehouse:</label>
              </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Comments:" id="comment" name="receiptComment"></textarea>
                <label for="comment">Comments:</label>
              </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</form>