<%- include('../../partials/header') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />
<style>
  body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
  }
</style>

<div id="loading"></div>

<div style="padding: 1.5%">
  <div class="row">
    <div class="col-md-4">
      <a class="button-8 mb-2" href="/logistic/products/newproduct">
        <%if(languages == "English"){%>
          New product
        <%}else{%>
          Novo produto
        <%}%>
      </a>
    </div>
    <div class="col-lg-6">
    </div>
    <div class="col-sm-2">
      <button type="button" class="button-8 mb-2" id="result" style="float: right;">
        <span class="counter-value"><%=results%></span>
        <%if(languages == "English"){%>
          results
        <%}else{%>
          resultados
        <%}%>
      </button>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn0"
          onkeyup="procura(0, 'procuraBtn0')"
        />
        <label for="procuraBtn0">
          <%if(languages == "English"){%>
            Code:
          <%}else{%>
            Código:
          <%}%>
        </label>
      </div>
    </div>
    <div class="col">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn1"
          onkeyup="procura(1, 'procuraBtn1')"
        />
        <label for="procuraBtn1">
          <%if(languages == "English"){%>
            Name:
          <%}else{%>
            Name:
          <%}%>
        </label>
      </div>
    </div>
  </div>
  <div class="table-wrapper table-responsive table-striped">
    <table class="fl-table" id="myTable">
      <thead>
        <tr style="height: 25px">
          <th>
            <%if(languages == "English"){%>
              Code
            <%}else{%>
              Código
            <%}%>
          </th>
          <th>
            <%if(languages == "English"){%>
              Name
            <%}else{%>
              Nome
            <%}%>
          </th>
          <th>
            <%if(languages == "English"){%>
              Actions
            <%}else{%>
              Ações
            <%}%>
          </th>
        </tr>
      </thead>
      <tbody>
        <%products.forEach(function(product){ %>
          <%if(product.isActive){%>
        <tr>
          <td><p><%=product.code%></p></td>
          <td style="width: 40%; white-space: normal;"><p><%=product.name%></p></td>
          <td>
            <a class="button-8" href="/logistic/editproduct/<%=product._id%>">Edit</a>
            <a class="button-8" href="/logistic/productentry/<%=product._id%>">Entry</a>
            <a class="button-8" href="/logistic/productexit/<%=product._id%>">Exit</a>
          </td>
        </tr>
        <%}%>
        <%})%>
      </tbody>
      <tbody></tbody>
    </table>
  </div>
</div>
<%- include('../../partials/footer') %>

<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>
