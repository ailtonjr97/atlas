<%- include('partials/header') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />
<style>
  body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
  }
  h2 {
    text-align: center;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    padding: 30px 0;
  }
</style>

<div id="loading"></div>

<div class="row mt-2 mb-2" style="padding-left: 1.5%; width: 100%">
  <div class="col-sm-3">
    <a class="button-8" onclick="tabelaEmpresa()" id="botaoEmpresa">Empresas</a>
    <a class="button-8" onclick="tabelaFilial()" id="botaoFilial">Filiais</a>
  </div>
</div>
<div style="padding: 1.5%; padding-top: 0">
  <div class="row mb-2 linhaBotaoEmpresa">
    <div class="col-lg-6">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn2"
          onkeyup="procuraSegunda(0, 'procuraBtn2')"
        />
        <label for="descricaoInput">Procurar por código:</label>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn3"
          onkeyup="procuraSegunda(1, 'procuraBtn3')"
        />
        <label for="descricaoInput">Procurar por nome:</label>
      </div>
    </div>
  </div>
  <div class="row mb-2 linhaBotaoFilial">
    <div class="col-lg-6">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn0"
          onkeyup="procura(0, 'procuraBtn0')"
        />
        <label for="descricaoInput">Procurar por código:</label>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn1"
          onkeyup="procura(1, 'procuraBtn1')"
        />
        <label for="descricaoInput">Procurar por nome:</label>
      </div>
    </div>
  </div>
  <div class="table-wrapper table-responsive">
    <table class="fl-table" id="myTable">
      <thead>
        <tr style="height: 25px">
          <th>Código</th>
          <th>Nome</th>
          <th>Telefone</th>
          <th>Endereço</th>
          <th>Bairro</th>
          <th>Cidade</th>
          <th>Estado</th>
          <th>CEP</th>
        </tr>
      </thead>
      <tbody>
        <%filiais.forEach(function(filial){ %>
        <tr>
          <td><%=filial.Code%></td>
          <td><%=filial.Description%></td>
          <td><%=filial.Phone%></td>
          <td><%=filial.Street%></td>
          <td><%=filial.Neighborhood%></td>
          <td><%=filial.City%></td>
          <td><%=filial.State%></td>
          <td><%=filial.ZipCode%></td>
        </tr>
        <%})%>
      </tbody>

      <tbody></tbody>
    </table>
    <table class="fl-table" id="myTable2">
      <thead>
        <tr style="height: 25px">
          <th>Código</th>
          <th>Nome</th>
        </tr>
      </thead>
      <tbody>
        <%empresas.forEach(function(empresa){ %>
        <tr>
          <td><%=empresa.Code%></td>
          <td><%=empresa.CorporateName%></td>
        </tr>
        <%})%>
      </tbody>

      <tbody></tbody>
    </table>
  </div>
</div>

<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/validate.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>
<script>
  document.getElementById("myTable2").style.display = "none";
  document.getElementsByClassName("linhaBotaoEmpresa")[0].style.display =
    "none";

  function tabelaEmpresa() {
    document.getElementsByClassName("linhaBotaoFilial")[0].style.display =
      "none";
    document.getElementsByClassName("linhaBotaoEmpresa")[0].style.display = "";
    document.getElementById("myTable").style.display = "none";
    document.getElementById("myTable2").style.display = "revert";
  }

  function tabelaFilial() {
    document.getElementsByClassName("linhaBotaoEmpresa")[0].style.display =
      "none";
    document.getElementsByClassName("linhaBotaoFilial")[0].style.display = "";
    document.getElementById("myTable2").style.display = "none";
    document.getElementById("myTable").style.display = "revert";
  }
</script>

<%- include('partials/footer') %>
