<%- include('partials/header') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<style>
  body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
  }
  h2 {
    text-align: center;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    padding: 30px 0;
  }
</style>

<div style="padding: 1.5%">
  <div class="row mb-2">
    <div class="col-sm-2">
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="myInput"
            onkeyup="procuraCodigo()"
          />
          <label for="descricaoInput">Procurar por código:</label>
        </div>
      </div>
    <div class="col-sm-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="myInput1"
          onkeyup="procuraEntidade()"
        />
        <label for="descricaoInput">Procurar por entidade:</label>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="myInput2"
          onkeyup="procuraCodigoEntidade()"
        />
        <label for="descricaoInput">Procurar por cod. entidade:</label>
      </div>
    </div>
    <div class="col-sm-2">
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="myInput3"
            onkeyup="procuraFilial()"
          />
          <label for="descricaoInput">Procurar por filial:</label>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="myInput4"
            onkeyup="procuraNomeArquivo()"
          />
          <label for="descricaoInput">Procurar por nome:</label>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="myInput5"
            onkeyup="procuraDescritivoArquivo()"
          />
          <label for="descricaoInput">Procurar por descritivo:</label>
        </div>
      </div>
  </div>
  <div class="table-wrapper table-responsive">
    <table class="fl-table" id="myTable">
      <thead>
        <tr style="height: 25px">
          <th>Código</th>
          <th>Entidade</th>
          <th>Código entidade</th>
          <th>Filial</th>
          <th>Nome arquivo</th>
          <th>Descrição arquivo</th>
        </tr>
      </thead>
      <tbody>
        <%contratos.forEach(function(contrato){ %>
        <tr>
          <td><%=contrato.Code%></td>
          <td><%=contrato.Entity%></td>
          <td><%=contrato.EntityCode%></td>
          <td><%=contrato.BranchEntity%></td>
          <td><%=contrato.ListOfKnowledge[0].FileName%></td>
          <td><%=contrato.ListOfKnowledge[0].FileDescription%></td>
        </tr>
        <%})%>
      </tbody>

      <tbody></tbody>
    </table>
  </div>
</div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"
  integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc"
  crossorigin="anonymous"
></script>
<script>
  function procuraCodigo() {
    // Declare variables
    var input, filter, table, tr, td, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    table = document.getElementById("myTable");
    tr = table.getElementsByTagName("tr");

    // Loop through all table rows, and hide those who don't match the search query
    for (i = 0; i < tr.length; i++) {
      td = tr[i].getElementsByTagName("td")[0];
      if (td) {
        txtValue = td.textContent || td.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          tr[i].style.display = "";
        } else {
          tr[i].style.display = "none";
        }
      }
    }
  }

