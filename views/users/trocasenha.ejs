<%- include('../partials/sidebar') %>
<div class="container mt-2">
  <h1>Trocar senha</h1>
  <div class="row" style='margin-bottom: 80px;'>
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <form action="/users/changepassword/<%=user%>" method="POST" autocomplete="off" id='formCad'>
            <div class="form-group">
              <label for="passwordold">Senha antiga</label>
              <input type="password" class="form-control" name="oldpassword" autocomplete="off">
            </div>
            <div class="form-group mt-2">
              <label for="passwordnew">Nova senha</label>
              <input type="password" class="form-control" name="newpassword">
            </div>
            <button type="submit" id='botaoSalva' class="btn btn-success mt-2">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
