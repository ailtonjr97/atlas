<%- include('partials/header') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />
<link rel="stylesheet" href="/css/contador.css" />
<style>
  body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
  }
</style>

<div id="loading"></div>

<div style="padding: 1.5%">
  <div class="row">
    <div class="col-md-4">
      <a class="button-8 mb-2" onclick="confirmation('This table will take 15 seconds to update. Please do not closa Chrome while the actions takes place. When done, a message of error or success will appear. Do you really want to update this table?' , '/produtos/atualizar')">Update products table</a>
      <a class="button-8 mb-2" href="">New product</a>
    </div>
    <div class="col-lg-6">
      <%if(atualizado == 1){%>
        <button type="button" class="btn btn-success mb-2" id="execSuc" style="margin-left: 15%;">Success!</button>
      <%}else if (atualizado == 2){%>
        <button type="button" class="btn btn-danger mb-2" id="execErr">Error.</button>
      <%}%>
    </div>
    <div class="col-sm-2">
      <button type="button" class="button-8 mb-2" id="result" style="display: none; float: right;">
        <span class="counter-value"><%=resultados%></span>
        resultados
      </button>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-sm-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn0"
          onkeyup="procura(0, 'procuraBtn0')"
        />
        <label for="procuraBtn0">Branch:</label>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn1"
          onkeyup="procura(1, 'procuraBtn1')"
        />
        <label for="procuraBtn1">Code:</label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn2"
          onkeyup="procura(2, 'procuraBtn2')"
        />
        <label for="procuraBtn2">Description:</label>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn3"
          onkeyup="procura(3, 'procuraBtn3')"
        />
        <label for="procuraBtn3">Type:</label>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn4"
          onkeyup="procura(4, 'procuraBtn4')"
        />
        <label for="procuraBtn4">Unit:</label>
      </div>
    </div>
  </div>
  <div class="table-wrapper table-responsive table-striped">
    <table class="fl-table" id="myTable">
      <thead>
        <tr style="height: 25px">
          <th>Branch</th>
          <th>Code</th>
          <th>Description</th>
          <th>Type</th>
          <th>Unit</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%produtos.forEach(function(produto){ %>
        <tr>
          <td><%=produto.filial%></td>
          <td><%=produto.cod%></td>
          <td><%=produto.desc%></td>
          <td><%=produto.tipo%></td>
          <td><%=produto.um%></td>
          <td>
            <a class="button-8 mb-2" onclick="confirmation('Esse produto serÃ¡ atualizado. Deseja prosseguir?' , '/produtos/atualizarunico/<%=produto._id%>/<%=produto.cod%>')">Update</a>
            <a class="button-8 mb-2" target="_blank" href="/produtos/detalhes/<%=produto.cod%>">Details</a>
          </td>
        </tr>
        <%})%>
      </tbody>

      <tbody></tbody>
    </table>
  </div>
</div>
<%- include('partials/footer') %>

<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>
<script type="text/javascript" src="/js/contador.js"></script>
