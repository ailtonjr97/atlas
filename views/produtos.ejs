<%- include('partials/header') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />
<link rel="stylesheet" href="/css/contador.css" />
<style>
  body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
  }

  @keyframes myAnimation{
  0%{
    opacity: 1;
  }
  50%{
    opacity: 0.5;
  }
  100%{
    display: none;
    opacity: 0;
  }
}

#execSuc{
    animation-name: myAnimation;
    animation-delay: 5000ms;
    animation-duration: 5000ms;
    animation-fill-mode: forwards;
}
</style>

<div id="loading"></div>

<div style="padding: 1.5%">
  <div class="row">
    <div class="col-md-4">
      <a class="button-8 mb-2" onclick="confirmation('A tabela produtos leva, em média, 15 segundos para atualizar. Favor não fechar a aba do Chrome enquanto o processo é executado. Quando concluído irá aparecer uma mensagem de sucesso ou de erro. Você deseja realmente atualizar essa tabela?' , '/produtos/atualizar')">Atualizar tabela produtos</a>
    </div>
    <div class="col-lg-6">
      <%if(atualizado == 1){%>
        <button type="button" class="btn btn-success mb-2" id="execSuc" style="margin-left: 15%;">Ação executada com sucesso!</button>
      <%}else if (atualizado == 2){%>
        <button type="button" class="btn btn-danger mb-2" id="execErr">Ação não pode ser executada. Tente novamente mais tarde.</button>
      <%}%>
    </div>
    <div class="col-sm-2">
      <button type="button" class="button-8 mb-2" id="result" style="display: none; float: right;">
        <span class="counter-value"><%=resultados%></span>
        resultados
      </button>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-md-3">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn0"
          onkeyup="procura(0, 'procuraBtn0')"
        />
        <label for="procuraBtn0">Código:</label>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn1"
          onkeyup="procura(1, 'procuraBtn1')"
        />
        <label for="procuraBtn1">Código de barras:</label>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn2"
          onkeyup="procura(2, 'procuraBtn2')"
        />
        <label for="procuraBtn2">Nome:</label>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="procuraBtn3"
          onkeyup="procura(3, 'procuraBtn3')"
        />
        <label for="procuraBtn3">Endereçamento:</label>
      </div>
    </div>
  </div>
  <div class="table-wrapper table-responsive">
    <table class="fl-table" id="myTable">
      <thead>
        <tr style="height: 25px">
          <th>Filial</th>
          <th>Código</th>
          <th>Descritivo</th>
          <th>Tipo</th>
          <th>Código item</th>
          <th>Unidade</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <%produtos.forEach(function(produto){ %>
        <tr>
          <td><%=produto.filial%></td>
          <td><%=produto.cod%></td>
          <td><%=produto.desc%></td>
          <td><%=produto.tipo%></td>
          <td><%=produto.codite%></td>
          <td><%=produto.um%></td>
          <td>
            <a class="button-8 mb-2" onclick="confirmation('Esse produto será atualizado. Deseja prosseguir?' , '/produtos/atualizarunico/<%=produto.cod%>')">Atualizar</a>
          </td>
        </tr>
        <%})%>
      </tbody>

      <tbody></tbody>
    </table>
  </div>
</div>
<%- include('partials/footer') %>

<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>
<script type="text/javascript" src="/js/contador.js"></script>
