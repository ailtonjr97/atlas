<%- include('partials/header') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/files.css" />


<form action="/users/register" method="POST" enctype="multipart/form-data">
  <div class="row" id='masterRow' style="max-width: 99%; margin-left: 1%">
    <div class="row mt-3">
        <div class="col">
            <div class="form-floating">
              <textarea class="form-control" placeholder="Write your ticket here..." id="name" name="name"></textarea>
              <label for="name">Name of the user</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="username" placeholder="name@example.com" name="username">
                <label for="username">Email address</label>
              </div>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-lg">
            <div class="form-floating">
                <select class="form-select" id="branch" aria-label="Floating label" name="branch">
                    <option class='valor'>US</option>
                    <option class='valor'>GERMANY</option>
                    <option class='valor'>AUSTRALIA</option>
                </select>
                <label for="branch">Branch:</label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
              <select class="form-select" id="department" aria-label="Floating label" name="department">
                  <option >Marketing</option>
                  <option >Accounting</option>
                  <option >Human Resources</option>
                  <option >Engineering</option>
              </select>
            <label for="department">Department:</label>
            </div>
          </div>
    </div>
    <div class="row mt-2">
        <div class="col-1">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="isadmin" name="isadmin">
                <label class="form-check-label" for="isadmin">Is admin?</label>
              </div>
        </div>
        <div class="col">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="isactive" name="isactive">
                <label class="form-check-label" for="isactive">Is active?</label>
              </div>
        </div>
    </div>
    <div class="file-input mt-2">
        <input type="file" id="file" class="file" name="postImage">
        <label for="file">
          New anex
          <p class="file-name" style="width: 500px;"></p>
        </label>
      </div>
  </div>

  <br>
  <button type="submit" id='botaoSalva' class="btn btn-success" style="margin-left: 45%;">Open ticket</button>
</form>
<%- include('partials/footer') %>
